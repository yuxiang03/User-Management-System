<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">
    <insert id="saveUserRoleRel">
        insert into sys_user_role(userId,roleId) values (#{id},#{roleIds});
    </insert>

    <delete id="delUserRoleRel">
        delete from sys_user_role where userId = #{userId}
    </delete>

    <delete id="del">
        delete from sys_user where id = #{userId}
    </delete>

    <select id="findAll" resultType="com.example.domain.User">
        select * from sys_user;
    </select>

    <select id="findByUsernameAndPassword" resultType="com.example.domain.User">
        select * from sys_user where username=#{username} and password=#{password}
    </select>

</mapper>